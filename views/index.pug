extends layout


append content  
  .container.content
    h1 Fcc-Voting
    if userAuth == 0
      h3 Select a poll to see the results and vote, or sign-in to make a new poll.
    else
      h3 Select a poll to see the results and vote, or #[a(href=websiteUrl + '/newpoll') make a new poll!] 
      
    ul
      each val in pollsNames
        li.item #[a(href=websiteUrl + "/" + val) #{val}]
      else
        li #[h2(style="color: #da0000") there are no Polls]
        

    
